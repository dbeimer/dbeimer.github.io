---
import NavAlter from "../components/Nav";
import "../styles/animated-gradient.css";
const { title } = Astro.props;
import moment from "moment";
let year = moment().format("YYYY");
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CE5WTNCTXP"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-CE5WTNCTXP");
    </script>
    <title>Beimer Campos</title>
  </head>
  <body
    class="bg-[#f8fafd] dark:bg-[#0a0a23] text-zinc-900 dark:text-zinc-100 min-h-screen h-screen flex flex-col justify-between relative overflow-x-visible"
  >
    <NavAlter client:only="react" />
    <main class="flex-1 flex flex-col items-center justify-center px-2 md:px-0">
      <div class="max-w-3xl w-full mx-auto mt-24 mb-16 px-4 md:px-8">
        <slot />
      </div>
    </main>
    <footer
      class="py-4 bg-zinc-200/90 dark:bg-[#111132]/80 w-full mt-8 border-t border-zinc-100 dark:border-blue-900/60 shadow-[0_0_32px_0_rgba(37,99,235,0.12)] backdrop-blur-xl relative z-10"
    >
      <div class="mx-auto text-center text-xs text-zinc-600 dark:text-zinc-300">
        &copy; {year} creado por <a
          href="https://github.com/dbeimer"
          class="underline hover:text-blue-400 dark:hover:text-blue-300 transition-colors font-semibold"
          >dbeimer</a
        >
      </div>
    </footer>
    <style>
      body::before {
        content: "";
        position: fixed;
        inset: 0;
        z-index: 0;
        pointer-events: none;
      }
    </style>
    <script>
      const elemento = document.documentElement;
      const dark =
        localStorage.theme === "dark" ||
        window.matchMedia("(prefers-color-scheme: dark)").matches;
      if (dark) {
        if (!elemento.classList.contains("dark")) {
          elemento.classList.add("dark");
        }
      } else {
        elemento.classList.remove("dark");
      }
    </script>
  </body>
</html>
