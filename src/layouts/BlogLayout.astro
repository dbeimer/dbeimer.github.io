---
import { MDXLayoutProps } from "astro";
import MainLayout from "../layouts/MainLayout.astro";
type Props = MDXLayoutProps<{
  title: string;
  author: string;
  date: string;
  heroImage: string;
}>;

const { frontmatter } = Astro.props;
---

<MainLayout>
  <section class="mt-20 max-w-3xl mx-auto px-2">
    {frontmatter.heroImage && (
      <div
        class="h-72 md:h-80 bg-cover bg-center rounded-lg mb-6"
        style={`background-image:url('${frontmatter.heroImage}')`}
        aria-label="Imagen principal del artículo"
      />
    )}
    <div class="text-center mb-6">
      <h1 class="mt-2 text-3xl md:text-4xl font-bold text-zinc-800 dark:text-zinc-100">{frontmatter.title}</h1>
      <p class="mb-2 text-gray-500 dark:text-gray-400 flex justify-center gap-2 text-sm">
        <span class="font-semibold">{frontmatter.author}</span>
        <span aria-hidden="true">·</span>
        <span>{frontmatter.date}</span>
      </p>
    </div>
    <slot />
  </section>
</MainLayout>
<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer base {
    h1 {
      @apply text-4xl mb-2 mt-4 font-semibold;
    }
    h2 {
      @apply text-2xl mt-5 mb-4 font-semibold;
    }
    h3 {
      @apply text-xl mt-4 mb-2 font-semibold;
    }
    pre {
      @apply my-2 px-4 py-3 text-sm rounded-lg !bg-zinc-800 !text-zinc-100 dark:!bg-zinc-900/[.5] dark:!text-zinc-100 overflow-x-auto md:w-auto md:mx-0 md:px-2 lg:text-base;
    }
    p {
      @apply dark:text-gray-400 text-gray-500 text-justify md:text-start mb-2;
    }
    a {
      @apply text-zinc-800 dark:text-zinc-200 no-underline hover:text-zinc-600 dark:hover:text-zinc-100 transition-colors;
    }
    ul, ol {
      @apply list-disc ml-6 mb-2;
    }
    code {
      @apply bg-zinc-100 dark:bg-zinc-800 rounded px-1 py-0.5 text-sm font-mono;
    }
  }
</style>

</style>
